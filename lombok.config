# IDEA特定配置
config.stopBubbling = true
lombok.addLombokGeneratedAnnotation = true

# 设置Lombok稳定性
lombok.anyConstructor.addConstructorProperties = true

# 禁用一些可能导致问题的功能
lombok.accessors.chain = false
lombok.extern.findbugs.addSuppressFBWarnings = false

# 兼容JDK8
lombok.equalsAndHashCode.callSuper = call

# 解决NoSuchFieldError问题的关键配置
lombok.equalsAndHashCode.flagUsage = error
lombok.fieldDefaults.defaultPrivate = false
lombok.fieldDefaults.defaultFinal = false

# 禁用可能引起问题的功能
lombok.val.flagUsage = error
lombok.var.flagUsage = error
lombok.log = false

# 显式关闭一些高级特性
lombok.experimental.flagUsage = error

# 关键配置: 确保使用JDK 8兼容模式
lombok.sourceGeneration.jdk8TimeFriendly = true 